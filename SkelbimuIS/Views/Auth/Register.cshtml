<div class="row">
    <div class="col-md-6 offset-md-3">
        <div class="signup-form">
            <form action="" class="mt-5 border p-4 bg-light shadow">
                <h4 class="mb-5 text-secondary">Naujos paskyros registracija</h4>
                <div class="row">
                    <div class="mb-3 col-md-6">
                        <label>Vardas<span class="text-danger">*</span></label>
                        <input type="text" name="fname" class="form-control" placeholder="Įveskite vardą">
                    </div>

                    <div class="mb-3 col-md-6">
                        <label>Pavardė<span class="text-danger">*</span></label>
                        <input type="text" name="Lname" class="form-control" placeholder="Įveskite pavardę">
                    </div>

                    <div class="mb-3 col-md-12">
                        <label>Slaptažodis<span class="text-danger">*</span></label>
                        <input type="password" name="password" class="form-control" placeholder="Įveskite slaptažodį">
                    </div>
                    <div class="mb-3 col-md-12">
                        <label>Patvirtinkite slaptažodį<span class="text-danger">*</span></label>
                        <input type="password" name="confirmpassword" class="form-control" placeholder="Įveskite slaptažodį">
                    </div>
                    <div class="mb-3 col-md-12">
                        <label>El. paštas<span class="text-danger">*</span></label>
                        <input type="email" name="email" class="form-control" placeholder="Įveskite el. pašto adresą">
                    </div>
                    <div class="mb-3 col-md-12">
                        <label>Miestas<span class="text-danger">*</span></label>
                        <input type="text" name="city" class="form-control" placeholder="Įveskite miesto pavadinimą">
                    </div>
                    <div class="col-md-12">
                        <button class="btn btn-primary float-end">Registruotis</button>
                    </div>
                </div>
            </form>
            <p class="text-center mt-3 text-secondary">Jeigu jau turite paskyrą, <a asp-controller="Auth" asp-action="Index">prisijunkite</a></p>
        </div>
    </div>
</div>