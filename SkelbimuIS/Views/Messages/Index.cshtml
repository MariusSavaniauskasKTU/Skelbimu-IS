@model List<SkelbimuIS.Models.Message>

<h1 class="display-5">Žinučių kambarys</h1>

<h3 class="mt-2">Gautos žinutės:</h3>
<div class="list-group">
        
        @foreach (var message in Model)
        {
            <a class="btn list-group-item list-group-item-action" asp-controller="Messages" asp-action="ViewMessage" asp-route-username="@message.fromUsername">
                <strong>@message.topic</strong>
                <div style="display: inline;">@message.fromUsername @message.date</div>
                <span class="badge bg-success">Naujas</span>
            </a>
        }
        
</div>
<nav class="mt-2" aria-label="Page navigation example">
    <ul class="pagination justify-content-center">
        <li class="page-item"><a class="page-link" href="#">1</a></li>
        <li class="page-item"><a class="page-link" href="#">2</a></li>
        <li class="page-item"><a class="page-link" href="#">3</a></li>
    </ul>
</nav>

<a class="btn btn-primary" asp-controller="Messages" asp-action="NewMessage">Siųsti naują žinutę</a>